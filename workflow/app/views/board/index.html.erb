<!-- menu bar -->
<div class="w-full h-10 flex flex-row items-center border-b border-blue-300">
    menu
</div>

<!-- board -->
<div class="border border-red-100 flex flex-row flex-1 overflow-x-auto py-2 space-x-2 w-full" data-controller="draggable-item" data-draggable-item-group-value="board">
    <% (1..20).each do |lane_index| %>
    <!-- swim lane -->
    <div class="flex flex-col w-72 max-w-72 min-w-72 flex-1 p-1 border rounded bg-white cursor-pointer">
        <h1 class="text-sm font-bold p-1">Lane #<%= lane_index %></h1>
        <div class="flex flex-col flex-1 space-y-1 overflow-y-auto bg-slate-100" data-controller="draggable-item" data-draggable-item-group-value="swimlane">
            <% (1..25).each do |card_index| %>
            <div class="border rounded border-gray-300 p-2 cursor-pointer">
                This is the item #<%= card_index %> from lane #<%= lane_index %>
            </div>
            <% end %>
        </div>
    </div>
    <% end %>
</div>