<div class="container mx-auto">
    <h1 class="font-bold text-lg leading-10 mb-4 mt-2">My boards</h1>
    <div class="flex flex-row space-x-4">
        <div class="w-1/4 min-w-72 h-20 relative" data-controller="popup-trigger form-autofocus" data-action="popup-trigger:showed->form-autofocus#focus">
            <button data-action="popup-trigger#show" class="z-0 absolute top-0 left-0 w-full h-full border-l-4 border-gray-300 rounded-r bg-gray-100 text-gray-500">
                Create a new board
            </button>
            <div data-popup-trigger-target="popup" class="hidden z-10 absolute -right-[calc(100%+8px)] top-0 w-[calc(100%)] bg-gray-200 rounded-md p-4">
                <form method="post" data-turbo="false" data-controller="form-validator" data-action="submit->form-validator#submit" data-form-validator-enabled-classes-value="bg-blue-300 text-gray-200" data-form-validator-disabled-classes-value="bg-gray-300 text-gray-400">
                    <div class="flex flex-col space-y-2">
                        <div class="block">
                            <label class="font-bold text-sm text-gray-500">Board title</lable>
                        </div>
                        <div class="block">
                            <input type="text" class="w-full" data-form-autofocus-target="autofocus" required name="board_title">
                        </div>
                        <div class="block">
                            <button class="w-full bg-blue-300 text-gray-200 py-2 rounded">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <button class="w-1/4 min-w-72 h-20 border-l-4 border-gray-300 rounded-r bg-gray-100 text-gray-500">
            Create a new board
        </button>
        <button class="w-1/4 min-w-72 h-20 border-l-4 border-gray-300 rounded-r bg-gray-100 text-gray-500">
            Create a new board
        </button>
    <% @my_boards.each do |board| %>
        <button class="w-1/4 min-w-72 h-20 border-l-4 border rounded-r">
        <%= board[:title] %>
        </button>
    <% end %>
    </div>
</div>